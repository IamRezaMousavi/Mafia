<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.RoleActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/roleTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/roleToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/select_roles"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roleTopBar">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/citizen_md_theme_secondaryContainer"
            android:gravity="center_horizontal"
            android:text="@string/citizen_roles"
            android:textAlignment="center"
            android:textColor="@color/citizen_md_theme_onSecondaryContainer" />

        <include
            android:id="@+id/chipGroup"
            layout="@layout/citizen_chipgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/mafia_md_theme_secondaryContainer"
            android:gravity="center_horizontal"
            android:text="@string/mafia_roles"
            android:textAlignment="center"
            android:textColor="@color/mafia_md_theme_onSecondaryContainer" />

        <include
            android:id="@+id/chipGroup2"
            layout="@layout/mafia_chipgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/independent_md_theme_secondaryContainer"
            android:gravity="center_horizontal"
            android:text="@string/independent_roles"
            android:textAlignment="center"
            android:textColor="@color/independent_md_theme_onSecondaryContainer" />

        <include
            android:id="@+id/chipGroup3"
            layout="@layout/independent_chipgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableEnd="@drawable/baseline_arrow_forward_24"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        android:text="@string/division_roles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>